function fcnShowFeedBlk(){
		$("#reTrueLoTime").val("");
		$("#reTrueThr").val("");
		$("#reTrueWeight").val("");
		$("#reTrueSpeed").val("");
		$("#reTrueDist").val("");
		$("#reTrueMsg").val("");
		$("#reTrueEmail").val("");		
		$("#outInfoFbBtn").css("display","none");	
		$("#outInfoFbBlk").css("display","");	
	
	
}

function reDesignCheck0(){
	if((parseFloat($("#reDesign0").val())+parseFloat($("#reDesign1").val()))>1){
		var inVal=parseFloat($("#reDesign0").val());
		inVal=1000-inVal*1000;
		$("#reDesign1").val(inVal/1000);
		$("#reDesign2").val(0);		
	}else{
		var inVal=1000-parseFloat($("#reDesign0").val())*1000-parseFloat($("#reDesign1").val())*1000;
		$("#reDesign2").val(inVal/1000);
	}	
}

function reDesignCheck1(){
	if((parseFloat($("#reDesign0").val())+parseFloat($("#reDesign1").val()))>1){
		var inVal=parseFloat($("#reDesign1").val());
		inVal=1000-inVal*1000;
		$("#reDesign0").val(inVal/1000);
		$("#reDesign2").val(0);		
	}else{
		var inVal=1000-parseFloat($("#reDesign0").val())*1000-parseFloat($("#reDesign1").val())*1000;
		$("#reDesign2").val(inVal/1000);
	}	
}
