
var langCook = jQuery.cookie("LangCookie");
var lang="";
var langDict = new Array();	
	
if(langCook==null || langCook=="")
{
	var type=navigator.appName;

	if (type=="Netscape"){
		lang = navigator.language;
	}
	else{
		lang = navigator.userLanguage;
	}
		lang = lang.substr(0,2);
						
} else {
	lang = langCook;	
}



var cUnitCook=jQuery.cookie("UnitCookie");
var cUnit="";

if(cUnitCook==null ||  cUnitCook==""){
	
	cUnit="me";
	
} else {
	cUnit=cUnitCook;
}


